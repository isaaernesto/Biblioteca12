@model IEnumerable<Biblioteca.Models.Genero>

@{
    ViewData["Title"] = "Gêneros";
}

<style>
    .bg-dark-custom {
        background-color: #23272b !important;
    }

    .text-gray {
        color: #adb5bd !important;
    }

    .table-dark-custom thead {
        background-color: #343a40;
        color: #fff;
    }

    .table-dark-custom tbody tr {
        background-color: #23272b;
        color: #fff;
    }

    .btn-gray {
        background-color: #6c757d;
        color: #fff;
        border: none;
    }

        .btn-gray:hover {
            background-color: #495057;
            color: #fff;
        }

    .btn-black {
        background-color: #212529;
        color: #fff;
        border: none;
    }

        .btn-black:hover {
            background-color: #000;
            color: #fff;
        }

    .card-header-custom {
        background-color: #23272b;
        color: #fff;
    }

    .card-custom {
        background-color: #343a40;
        color: #fff;
    }
</style>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card card-custom shadow-sm">
                <div class="card-header card-header-custom d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">Gêneros Literários</h2>
                    <a asp-action="Create" class="btn btn-gray">Novo Gênero</a>
                </div>
                <div class="card-body p-0">
                    <table class="table table-dark-custom table-bordered mb-0 align-middle">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                                <th style="width: 180px;" class="text-center">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="2" class="text-center text-gray py-4">
                                        Nenhum gênero cadastrado.
                                    </td>
                                </tr>
                            }
                            else
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                        <td class="text-center">
                                            <a asp-action="Edit" asp-route-id="@item.GeneroId" class="btn btn-gray btn-sm me-1">Editar</a>
                                            <a asp-action="Delete" asp-route-id="@item.GeneroId" class="btn btn-black btn-sm">Excluir</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
