@model Biblioteca.Models.Genero

@{
    ViewData["Title"] = "Excluir Gênero";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-danger shadow-sm">
                <div class="card-body">
                    <h1 class="text-danger">Excluir</h1>
                    <h4 class="mb-3">Tem certeza que deseja excluir este gênero?</h4>
                    <dl class="row">
                        <dt class="col-sm-4">Nome</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="GeneroId" />
                        <div class="d-flex justify-content-between">
                            <input type="submit" value="Excluir" class="btn btn-danger" />
                            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

